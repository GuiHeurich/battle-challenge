<h1>
  <%= @game.player_1.name %>: <%= @game.player_1.hit_points %>HP vs. <%= @game.player_2.name %>: <%= @game.player_2.hit_points %>HP
</h1>

<h2>
  <% if @game.finished? == true %>
  <%= @game.final_message %>
  <% else %>
  <%= @game.current_turn.name %>'s turn 
  <% end %>
</h2>

<form action="/attack" method="post">
  <input type="submit" value="ATTACK" >
</form>
